{
  "mcpServers": {
    "jira": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-jira-stdio"
      ],
      "env": {
        "JIRA_URL": "https://twentyideas.atlassian.net",
        "JIRA_EMAIL": "qa-hariharan@twentyideas.com",
        "JIRA_API_TOKEN": "${JIRA_API_TOKEN}"
      }
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    }
  }
}
